<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorWhite">



    <!-- GridMap -->

    <LinearLayout
        android:id="@+id/bluetooth_layout"
        android:layout_width="314dp"
        android:layout_height="349dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/border_black"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bluetoothUIButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_to_a_device" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="4dp"
            android:text="@string/not_connected"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="@string/type_your_message"
                android:inputType="text" />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send" />
        </LinearLayout>

        <TextView
            android:id="@+id/receivedMsgLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received_messages" />

        <ScrollView
            android:id="@+id/msgScroll"
            android:layout_width="200dp"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/msgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </ScrollView>
    </LinearLayout>

    <com.example.group_32_mdp.GridMap
        android:id="@+id/gridMap"
        android:layout_width="770dp"
        android:layout_height="607dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Start Controls (new block) -->

    <!-- Obstacle Controls -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start_controls"
        android:layout_width="323dp"
        android:layout_height="213dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridMap">

        <Button
            android:id="@+id/setStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Start Point"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setStartButton">

            <ImageButton
                android:id="@+id/fButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toEndOf="@id/flButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/bButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toEndOf="@id/blButton"
                app:layout_constraintTop_toBottomOf="@id/fButton"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/frButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/fButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/flButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/blButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/brButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintStart_toEndOf="@id/bButton"
                app:layout_constraintTop_toBottomOf="@id/frButton"
                app:srcCompat="@drawable/fr" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/obstacle_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/border_black"
        app:layout_constraintTop_toBottomOf="@id/start_controls"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/obstacleIcon"
            android:layout_width="76dp"
            android:layout_height="71dp"
            android:background="@drawable/border_black"
            android:src="@drawable/obstacle_icon"
            android:contentDescription="Obstacle icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Obstacle:"
                    android:textColor="@color/colorBlack" />

                <Switch
                    android:id="@+id/editObstacleToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drag Obstacle:"
                    android:textColor="@color/colorBlack" />

                <Switch
                    android:id="@+id/dragObstacleToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/robotStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Robot Status"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="1031dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
