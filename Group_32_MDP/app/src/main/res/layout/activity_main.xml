<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Gradient background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@drawable/f1background" />

    </FrameLayout>

    <!-- Bluetooth Controls -->

    <!-- GridMap -->
    <LinearLayout
        android:id="@+id/bluetooth_layout"
        android:layout_width="333dp"
        android:layout_height="304dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_grey_black_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridMap"
        app:layout_constraintVertical_bias="0.044">

        <Button
            android:id="@+id/bluetoothUIButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="@string/connect_to_a_device"
            android:background="#850707"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            style="@android:style/Widget.Button" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bg_grey_black_border"
            android:padding="4dp"
            android:text="@string/not_connected"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/type_your_message"
                android:inputType="text"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:background="#850707"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/receivedMsgLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received_messages"
            android:textColor="#FFFFFF" />

        <ScrollView
            android:id="@+id/msgScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/msgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF" />
        </ScrollView>
    </LinearLayout>


    <!-- Start Controls (new block) -->

    <!-- Obstacle Controls -->

    <!-- F32 Banner -->
    <ImageView
        android:id="@+id/f32Banner"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/f32_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Obstacle Controls -->

    <com.example.group_32_mdp.GridMap
        android:id="@+id/gridMap"
        android:layout_width="427dp"
        android:layout_height="436dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/start_controls"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/bluetooth_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f32Banner" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start_controls"
        android:layout_width="155dp"
        android:layout_height="145dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridMap">

        <Button
            android:id="@+id/setStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Start Point"
            android:background="#850707"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setStartButton">

            <ImageButton
                android:id="@+id/fButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toEndOf="@id/flButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/bButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toEndOf="@id/blButton"
                app:layout_constraintTop_toBottomOf="@id/fButton"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/frButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/fButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/flButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/blButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/brButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintStart_toEndOf="@id/bButton"
                app:layout_constraintTop_toBottomOf="@id/frButton"
                app:srcCompat="@drawable/fr" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/obstacle_controls"
        android:layout_width="240dp"
        android:layout_height="83dp"
        android:background="@drawable/bg_grey_black_border"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_controls">

        <ImageButton
            android:id="@+id/obstacleIcon"
            android:layout_width="73dp"
            android:layout_height="61dp"
            android:adjustViewBounds="true"
            android:background="@drawable/border_black"
            android:contentDescription="Obstacle icon"
            android:scaleType="fitCenter"
            android:src="@drawable/obstacle_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Obstacle:"
                    android:textColor="#FFFFFF" />

                <Switch
                    android:id="@+id/editObstacleToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drag Obstacle:"
                    android:textColor="#FFFFFF" />

                <Switch
                    android:id="@+id/dragObstacleToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/robotStatusBox"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:background="@drawable/bg_grey_black_border"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bluetooth_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f32Banner">

        <TextView
            android:id="@+id/robotStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Robot Status"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/robotStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ready"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/directionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direction"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/directionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="None"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/coordinatesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordinates"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/coordinatesStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="X: 0, Y: 0"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <!-- Start task buttons and timer -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grey_black_border"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/obstacle_controls">

        <Chronometer
            android:id="@+id/task1Chronometer"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/task1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Task 1"
            android:background="#850707"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            style="@android:style/Widget.Button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grey_black_border"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/obstacle_controls">

        <Chronometer
            android:id="@+id/task2Chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/task2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Task 2"
            android:background="#850707"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            style="@android:style/Widget.Button" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
