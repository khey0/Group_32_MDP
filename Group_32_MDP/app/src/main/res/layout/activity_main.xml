<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/bluetooth_layout"
        android:layout_width="339dp"
        android:layout_height="465dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/gridMap">

        <Button
            android:id="@+id/bluetoothUIButton"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:text="@string/connect_to_a_device"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.961"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:text="@string/not_connected"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="@string/type_your_message"
                android:inputType="text"
                android:padding="8dp" />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/send" />
        </LinearLayout>

        <TextView
            android:id="@+id/receivedMsgLabel"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:text="@string/received_messages" />

        <ScrollView
            android:id="@+id/msgScroll"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fillViewport="true">

            <TextView
                android:id="@+id/msgTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:text="" />
        </ScrollView>
    </LinearLayout>

    <!-- GridMap View (to display the grid) -->
    <com.example.group_32_mdp.GridMap
        android:id="@+id/gridMap"
        android:layout_width="445dp"
        android:layout_height="394dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bluetooth_layout"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="338dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridMap">

        <Button
            android:id="@+id/setStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Start Point"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setStartButton"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/fButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toEndOf="@id/flButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/arrow_up_float" />

            <ImageButton
                android:id="@+id/bButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toEndOf="@id/blButton"
                app:layout_constraintTop_toBottomOf="@id/fButton"
                app:srcCompat="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/frButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/fButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/flButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/blButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/fr" />

            <ImageButton
                android:id="@+id/brButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:rotation="180"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                app:layout_constraintStart_toEndOf="@id/bButton"
                app:layout_constraintTop_toBottomOf="@id/frButton"
                app:srcCompat="@drawable/fr" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
